# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/applied_mindfulness
DATABASE_SSL=false
DATABASE_POOL_MAX=20
DATABASE_POOL_MIN=2

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=applied-mindfulness-content
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_DEFAULT_PROVIDER=anthropic
LLM_TIMEOUT=10000
LLM_MAX_RETRIES=2

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-here

# Email Configuration (SES)
SES_REGION=us-east-1
FROM_EMAIL=noreply@appliedmindfulness.com
ADMIN_EMAIL=admin@appliedmindfulness.com

# Application Configuration
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3001
API_BASE_URL=http://localhost:3000/api

# Feature Flags
ENABLE_AI_COACHING=true
ENABLE_COMMUNITY=true
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# Crisis Detection Configuration
CRISIS_DETECTION_ENABLED=true
CRISIS_REVIEW_QUEUE_ENABLED=true
HUMAN_REVIEW_SLA_HOURS=2

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_TELEMETRY=false
OTEL_COLLECTOR_URL=http://localhost:4318

# Development Only
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false